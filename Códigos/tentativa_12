    <h3>Somatória dois números inteiros</h3>

    <script language="JavaScript">
        <!--
    /* Objetivo: Desenvolver um programa em JavaScript que faça a leitura de 2 números inteiros e apresente o resultado da soma entra eles.
     Aplique a conversão de valores com parseInt e apresente o resultedo da some entre eles.*/

    /* Definindo as variáveis*/ 
    var js_n1;
    var js_n2;
var js_soma;

    /* Entrada de Dados*/ 
    js_n1 = parseInt(window.prompt('Informe o primeiro número:1' , 'Digite aqui'));
    js_n2 = parseInt(window.prompt('Informe o segundo número:' , 'Digite aqui'));

    /* Processamento de Dados*/ 
    js_soma = js_n1 + js_n2;

    /* Saída de Dados*/ 
    documento.write('O Resultedo da soma=' + js_soma);
